<div>
    <%= form_with(url: user_index_path, method: "post") do |form| %>
        <div>
            <%= form.label :name %>
            <%= form.text_field :name %>
        </div>
        <div>
            <%= form.label :username %>
            <%= form.text_field :username %>
        </div>
        <div>
            <%= form.label :email %>
            <%= form.text_field :email %>
        </div>
        <%= form.submit %>
<% end %>

</div>

<% flash.each do |type, msg| %>
    <div>
        <%= msg %>
    </div>
<% end %>