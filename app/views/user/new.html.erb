<div>
    <%= form_with(url: user_index_path, method: "post") do |form| %>
        <div>
            <%= form.label :name %>
            <%= form.text_field :name %>
        </div>
        <div>
            <%= form.label :username %>
            <%= form.text_field :username %>
        </div>
        <div>
            <%= form.label :email %>
            <%= form.text_field :email %>
        </div>
        <%= form.submit "confirm new account" %>
<% end %>

</div>

<% flash.each do |type, message| %>
    <div>
        <% message.each do |msg| %>
            <%= msg %>
            <br>
        <% end %>
    </div>
<% end %>